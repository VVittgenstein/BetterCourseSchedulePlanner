{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "ts-node": {
    "swc": false,
    "files": true
  },
  "include": [
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "configs/**/*.json"
  ]
}
